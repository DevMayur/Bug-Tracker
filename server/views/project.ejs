<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet" />
        <link
            href="https://getbootstrap.com/docs/5.3/assets/css/docs.css"
            rel="stylesheet" />
        <link rel="stylesheet" href="/project.css" />
        <title><%= projectData.projectName %></title>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body class="p-3 m-0 border-0 bd-example">
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <!-- <img
                        src="../server/assets/images/favicon.png"
                        alt="Logo"
                        width="300"
                        class="d-inline-block align-middle" /> -->
                    <% var activitiesForSelectedIssue = []; %>
                    <div class="d-inline-block">
                        <span class="fs-2 fw-bolder"
                            ><%= projectData.projectName %></span
                        ><br />
                        <span class="fs-8 fw-normal"
                            ><%= projectData.projectDescription %></span
                        >
                    </div>
                </a>

                <div class="d-inline-block">
                    <a
                        href="/client/users/project/<%= projectData._id %>/createIssue"
                        ><button class="btn btn-outline-primary">
                            Create Issue
                        </button></a
                    >
                    <button class="btn btn-outline-danger">Logout</button>
                </div>
            </div>
        </nav>

        <hr class="m-4" />

        <div class="container text-center text-wrap">
            <div class="row column-gap-2 overflow-x-auto">
                <div class="col-2 text-start p-2">Project ID</div>
                <div class="col-2 text-start p-2">Status</div>
                <div class="col-2 text-start p-2">Age</div>
                <div class="col-2 text-start p-2">Last Action</div>
                <div class="col-2 text-start p-2">Author</div>
            </div>
            <div class="row column-gap-2">
                <div class="col-2 text-start fw-bolder p-2">
                    <%= projectData._id %>
                </div>
                <div class="col-2 text-start p-2">
                    <p
                        class="fs-6 align-middle progress-style"
                        style="font-size: 0.8rem !important">
                        IN PROGRESS
                    </p>
                </div>
                <div class="col-2 text-start fw-bolder p-2">
                    <%= projectData.age %>
                </div>
                <div class="col-2 text-start fw-bolder p-2">20 mins before</div>
                <div class="col-2 text-start fw-bolder p-2">
                    <%= projectData.author %>
                </div>
            </div>

            <div class="card "container text-center">

            <!-- Section: Timeline -->

            <div
                class="card-body"
                style="
                    text-align: start;
                    position: relative;
                    display: flex;
                    flex-direction: row;
                    overflow-x: auto;
                ">
                <div
                    class="py-5 col-2"
                    style="
                        display: inline-block;
                        position: inherit;
                        overflow-y: scroll;
                        max-height: 40vh;
                    ">
                    <ul class="list-group list-group-light issue-container">
                        <h5 class="fw-bold">Issues</h5>
                        <h6 class="fw-normal" style="color: #2691d9">
                            Select an issue
                        </h6>
                        <% issues.forEach(function(issue) { %>
                        <button onclick="setSelectedItem(`<%= issue._id %>`)">
                            <li class="issue"><%= issue.subject %></li>
                        </button>
                        <% }); %>
                    </ul>
                </div>
                <div style="width: 20px; border-right: solid 1px #cacaca"></div>
                <div
                    class="py-5 col-4"
                    style="
                        display: inline-block;
                        overflow-y: scroll;
                        max-height: 45vh;
                        padding: 12px;
                    ">
                    <h5 class="fw-bold">Timeline</h5>
                    <h6 class="fw-normal" style="color: #2691d9">
                        See all the activity on this issue
                    </h6>
                    <ul class="timeline" id="activityList">
                        <% activities.forEach(function(activity) { %>
                        <li class="timeline-item mb-5">
                            <h5 class="fw-bold"><%= activity.action %></h5>
                            <p class="text-muted mb-2 fw-bold">
                                <!-- <%= activity.created %> -->
                            </p>
                            <p class="text-muted">
                                <%= activity.user.username %>
                            </p>
                        </li>
                        <% }); %>
                    </ul>
                </div>
                <div style="width: 20px; border-right: solid 1px #cacaca"></div>
                <div
                    class="col-5"
                    style="
                        display: inline-block;
                        position: inherit;
                        padding: 24px;
                        max-height: 45vh;
                    ">
                    <h5 class="card-title">Add an update on the issue</h5>
                    <div class="input-group">
                        <!-- <span class="input-group-text">With textarea</span> -->
                        <textarea
                            style="height: 30vh"
                            class="form-control"
                            aria-label="With textarea"
                            id="update-input"></textarea>
                    </div>
                    <div style="height: 10px"></div>
                    <a class="btn btn-primary" id="update-button"
                        >Post Update</a
                    >
                </div>
            </div>
        </div>

        <script src="/project.js"></script>
        <script>
            setProjectId(`<%= projectData._id %>`);
        </script>
    </body>
</html>
